
@{
    ViewData["Title"] = "Response for mobile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="response-wrapper theme1">
    TEXT TEXT TEXT TEXT TEXT TEXT TEXT
    <div class="test">

    </div>
</div>

<button class="custom-btn">Click to change theme</button>



<script src="https://code.jquery.com/jquery-3.5.1.min.js" type="text/javascript"></script>
<script type="text/javascript">
    $(document).ready(function () {


        $('.btn').click(function () {
            var theme = $('.theme1');
            if (theme.length) {
                $('.response-wrapper').removeClass('theme1');
                $('.response-wrapper').addClass('theme2');
            } else {
                $('.response-wrapper').addClass('theme1');
                $('.response-wrapper').removeClass('theme2');
            }
        })
    });

</script>